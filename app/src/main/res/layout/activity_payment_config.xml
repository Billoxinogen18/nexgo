<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/primary_color"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Payment Configuration"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- Configuration Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Stripe Configuration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stripe API Key"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etStripeApiKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="sk_test_..."
                    android:inputType="text"
                    android:background="@drawable/button_keypad_background"
                    android:padding="12dp"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Square Configuration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Square API Key"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etSquareApiKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="sq0atp_..."
                    android:inputType="text"
                    android:background="@drawable/button_keypad_background"
                    android:padding="12dp"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <!-- PayPal Configuration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PayPal Client ID"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etPaypalApiKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="AUHMyl0I90mgdQTjrUWFL8JswSCll_MpMuIFV299HogEiuU9C6za_powpTXhP29tUWtzRxl2b-fsdIX5"
                    android:inputType="text"
                    android:background="@drawable/button_keypad_background"
                    android:padding="12dp"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PayPal Client Secret"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etPaypalSecret"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="EHdgWhzDvcjejewg0_7QjX3Zcpw3aaPUXTVNbA2R7CYw7peX5Mb8hatGVOnjk08gAP2krySgi5RkZu91"
                    android:inputType="textPassword"
                    android:background="@drawable/button_keypad_background"
                    android:padding="12dp"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Bank API Configuration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank API Key"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etBankApiKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="bank_..."
                    android:inputType="text"
                    android:background="@drawable/button_keypad_background"
                    android:padding="12dp"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Coinbase Configuration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coinbase API Key"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etCoinbaseApiKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="coinbase_..."
                    android:inputType="text"
                    android:background="@drawable/button_keypad_background"
                    android:padding="12dp"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Binance Configuration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Binance API Key"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etBinanceApiKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ghhAUdvCyMrYImYzFnaeom1cVXvHopy5gKWmQ9O7hPZK13ImJa66BJZ8L7Gps6C8"
                    android:inputType="text"
                    android:background="@drawable/button_keypad_background"
                    android:padding="12dp"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Binance Secret Key"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etBinanceSecret"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Xj0OCpB7H7t4YT6LD87ShEE1JMys0ppRI6aU1Xy2wIfU3VYoN2sZfAp8uvz3MEce"
                    android:inputType="textPassword"
                    android:background="@drawable/button_keypad_background"
                    android:padding="12dp"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Crypto Wallet Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crypto Wallet Address"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etCryptoWalletAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0x..."
                    android:inputType="text"
                    android:background="@drawable/button_keypad_background"
                    android:padding="12dp"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Status -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btnTest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Test Connection"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_secondary_background"
            android:textColor="@color/primary_color" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_primary_background"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
