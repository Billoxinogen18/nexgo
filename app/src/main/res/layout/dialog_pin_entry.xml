<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/card_background">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter PIN"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Card Info -->
    <TextView
        android:id="@+id/tvCardInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card ending in ****"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- PIN Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tvPin1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="•"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:background="@drawable/button_keypad_background"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/tvPin2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="•"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:background="@drawable/button_keypad_background"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/tvPin3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="•"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:background="@drawable/button_keypad_background"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/tvPin4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="•"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:background="@drawable/button_keypad_background"
            android:layout_margin="4dp" />

    </LinearLayout>

    <!-- Numeric Keypad -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4">

        <!-- Row 1 -->
        <Button
            android:id="@+id/btnPin1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="1"
            android:textSize="24sp"
            android:background="@drawable/button_keypad_background"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btnPin2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="2"
            android:textSize="24sp"
            android:background="@drawable/button_keypad_background"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btnPin3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="3"
            android:textSize="24sp"
            android:background="@drawable/button_keypad_background"
            android:textColor="@color/text_primary" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/btnPin4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="4"
            android:textSize="24sp"
            android:background="@drawable/button_keypad_background"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btnPin5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="5"
            android:textSize="24sp"
            android:background="@drawable/button_keypad_background"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btnPin6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="6"
            android:textSize="24sp"
            android:background="@drawable/button_keypad_background"
            android:textColor="@color/text_primary" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/btnPin7"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="7"
            android:textSize="24sp"
            android:background="@drawable/button_keypad_background"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btnPin8"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="8"
            android:textSize="24sp"
            android:background="@drawable/button_keypad_background"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btnPin9"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="9"
            android:textSize="24sp"
            android:background="@drawable/button_keypad_background"
            android:textColor="@color/text_primary" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/btnPinClear"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="C"
            android:textSize="24sp"
            android:background="@drawable/button_cancel_background"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnPin0"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="0"
            android:textSize="24sp"
            android:background="@drawable/button_keypad_background"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btnPinBackspace"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="⌫"
            android:textSize="20sp"
            android:background="@drawable/button_secondary_background"
            android:textColor="@color/text_primary" />

    </GridLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnPinCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_cancel_background"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnPinConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_primary_background"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
